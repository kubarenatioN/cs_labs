<UserControl x:Class="Delicious.BookingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Delicious"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border 
        Margin="10"
        Padding="30 15"
        Background="{DynamicResource LightGreen}"
        CornerRadius="30"
        VerticalAlignment="Center">
        
        <DockPanel>

            <StackPanel 
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <TextBlock 
                    Text="Мест на столик: " 
                    Style="{DynamicResource BookingControlText}"/>
                <TextBlock 
                    Style="{DynamicResource BookingControlText}"
                    Name="places"/>
            </StackPanel>

            <StackPanel
                VerticalAlignment="Center"
                Margin="10 0"
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <TextBlock 
                    Style="{DynamicResource BookingControlText}"
                    Text="Свободно: "/>
                <TextBlock 
                    Style="{DynamicResource BookingControlText}"
                    Name="placesCurrent"/>
            </StackPanel>

            <StackPanel
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <TextBlock 
                    Style="{DynamicResource BookingControlText}"
                    Text="Всего: "/>
                <TextBlock 
                    Style="{DynamicResource BookingControlText}"
                    Name="placesAll"/>
            </StackPanel>

            <Button
                Name="bookButton"
                Click="BookPlace"
                DockPanel.Dock="Right"
                HorizontalAlignment="Right"
                Content="Забронировать" Style="{DynamicResource LongControlButton}"/>

        </DockPanel>
    </Border>
    
</UserControl>
